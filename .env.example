# UNEXUSI Development Environment Configuration
# Copy this file to .env and customize for your location
# Date: 2025-12-05

# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================

# Project name and environment
PROJECT_NAME=unexusi_dev
ENVIRONMENT=development
DEBUG=true

# Virtual environment location (default: ./venv)
VENV_DIR=/home/user/unexusi_dev/venv

# ============================================================================
# DRIVE MOUNTING CONFIGURATION
# ============================================================================

# Format: MOUNT_POINT:DEVICE,MOUNT_POINT:DEVICE,...
# Example: /mnt/data:/dev/sdb1,/mnt/backup:/dev/sdc1
# Leave empty to skip drive mounting
DRIVE_MOUNT_POINTS=

# Common mount points (examples):
# DRIVE_MOUNT_POINTS=/mnt/storage:/dev/sdb1
# DRIVE_MOUNT_POINTS=/mnt/external:/dev/sdc1,/mnt/backup:/dev/sdd1

# ============================================================================
# PYTHON CONFIGURATION
# ============================================================================

# Python version preference
PYTHON_VERSION=3.10

# Pip configuration
PIP_CACHE_DIR=/tmp/pip-cache
PIP_DISABLE_PIP_VERSION_CHECK=1

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=unexusi_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=unexusi_dev
MONGO_USER=
MONGO_PASSWORD=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# SQLite (local file)
SQLITE_DB_PATH=/home/user/unexusi_dev/data/app.db

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# API Keys (for external services)
# Add your API keys here
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=/home/user/unexusi_dev/logs/app.log
LOG_FORMAT=json
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Secret key for sessions/JWT (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# CLOUD STORAGE CONFIGURATION
# ============================================================================

# AWS S3
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Cloud Storage
GCS_BUCKET=
GCS_PROJECT_ID=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_CONTAINER_NAME=

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@unexusi.dev

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# Cache backend: redis, memory, file
CACHE_BACKEND=memory
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000

# ============================================================================
# TASK QUEUE CONFIGURATION
# ============================================================================

# Celery/Task queue
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
PYTEST_ARGS=-v --cov=src --cov-report=html

# Code formatting
BLACK_LINE_LENGTH=88
ISORT_LINE_LENGTH=88

# ============================================================================
# LOCATION-SPECIFIC CONFIGURATION
# ============================================================================

# Identify which location this environment is for
LOCATION_NAME=laptop  # e.g., laptop, office, server1, etc.
LOCATION_TIMEZONE=UTC

# Location-specific paths
DATA_DIR=/home/user/unexusi_dev/data
TEMP_DIR=/tmp/unexusi_dev
BACKUP_DIR=/home/user/unexusi_dev/backups

# ============================================================================
# CUSTOM CONFIGURATION
# ============================================================================

# Add your custom environment variables below this line
# CUSTOM_VAR_1=value1
# CUSTOM_VAR_2=value2
